# Server Configuration
PORT=4000

# PostgreSQL Database Configuration (Main Database)
# Option 1: Use DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://admin:admin@localhost:5432/mydatabase

# Option 2: Use individual environment variables
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=admin
DB_PASSWORD=admin
DB_NAME=mydatabase

# JWT Authentication Configuration
# Generate strong secrets for production (e.g., using: openssl rand -base64 32)
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# WordPress API Configuration (for Property Sync)
WP_API_BASE_URL=https://thinhgialand.com/wp-json/wp/v2
WP_API_USERNAME=your_wp_username
WP_API_PASSWORD=your_wp_application_password
WP_POST_TYPE=bds

# Redis Configuration (for Job Queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# PHP Laravel API (properties list + auth for sync-from-PHP)
PHP_API_BASE_URL=https://your-php-api.example.com
PHP_AUTH_LOGIN_URL=
PHP_AUTH_EMAIL=0937516986
PHP_AUTH_PASSWORD=1234567890
PHP_AUTH_USE_TYPE_BODY=false
PHP_HOUSES_LIST_URL=
PHP_HOUSE_DETAIL_URL=
